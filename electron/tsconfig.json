{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"jsx": "preserve",
		"lib": ["dom", "esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"outDir": "../dist/main"
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
